@inherits UmbracoViewPage<ACTFoundation.Core.ViewModels.Partials.Items.BannerCarouselItemViewModel>

    @if (!string.IsNullOrWhiteSpace(Model.Title))
    {
        <div class="hero swiper-slide" style="
                background: linear-gradient(
                180deg,
                #000000 -33.39%,
                rgba(0, 0, 0, 0.4) 23.71%,
                rgba(0, 0, 0, 0.4) 61.3%,
                #000000 105.39%
                ),
            url(@Model.BackgroundImage.Url)
              no-repeat center / cover;
          ">
            @UIHelper.RenderText(Html,Model.Title,"h1","")
            @UIHelper.RenderText(Html,Model.Description, "p", "")
            <div style="display: flex; align-items: center;">
                @if(Model.ButtonLinks.Any() && Model.ButtonLinks != null)
                {
                    foreach (var buttonLink in Model.ButtonLinks)
                    {
                        Html.RenderPartial("~/Views/Partials/NestedContent/_ButtonLinkItem.cshtml", buttonLink);
                    }
                }
            </div>
        </div>
    }
