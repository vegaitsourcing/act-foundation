@inherits UmbracoViewPage<ArticleViewModel>

<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,700;1,300&display=swap"
      rel="stylesheet" />

<header class="hero hero--article"
        style="
        background: linear-gradient(
        180deg,
        #000000 -33.39%,
        rgba(0, 0, 0, 0.4) 23.71%,
        rgba(0, 0, 0, 0.4) 61.3%,
        #000000 105.39%
      ),
      url(@Model.MainImage.Url) no-repeat center;">
    <div class="chips">
        @if (Model.Tags != null)
        {
            foreach (var tag in Model.Tags)
            {
                <div class="chip" style="background-color: @tag.Color">@tag.Name</div>
            }
        }
        <div class="chips__author">
            <p>by <span>@Model.Author</span><br />@Model.CreateDate.ToString("HH:mm dd.MM.yyyy")</p>
        </div>
    </div>
</header>

<div class="article-section">
    <div class="article">
        <h1>@Model.Title</h1>
        @Html.Raw(Model.Text)
    </div>

    <div class="article-sidebar">
        @foreach (var article in Model.RelatedArticles) {
        <div class="articles-list-item">
            <div class="article-image">
                <img src=@article.MainImage.Url alt="" />
            </div>
            <div class="article-body">
                <h4 class="m-text">@article.Title</h4>
                <p class="regular-text">
                    @Html.Raw(article.TextPreview)
                </p>
                <a class="small-text uppercase" href="@article.Link">@Umbraco.GetDictionaryValue("Article.ReadMoreLink.Text")</a>
            </div>
        </div>
        }
    </div>
 </div>
